{
  "name": "bida-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "build": "run-p build:app build:lambda && yarn build:analysis",
    "build:analysis": "mkdir build -p build/.dev && source-map-explorer 'build/static/js/*.js' --html > build/.dev/bundle-analysis.html",
    "build:app": "tsc -p tsconfig.production.json && NODE_ENV=production react-scripts build",
    "build:graphql": "yarn build:graphql:schema && yarn build:graphql:types",
    "build:graphql:schema": "yarn ts scripts/build-schema.js",
    "build:graphql:types": "apollo codegen:generate graphql-types --target typescript --globalTypesFile src/config/graphql-types.ts",
    "build:lambda": "netlify-lambda build src/lambda --config ./webpack.functions.js",
    "build:schema": "yarn ts scripts/build-schema.js",
    "codegen": "apollo codegen:generate --target typescript",
    "eslint": "eslint --ext .js --ext .jsx --ext .ts --ext .tsx",
    "postinstall": "patch-package",
    "lint": "run-p lint:**",
    "lint:scripts": "yarn eslint src",
    "lint:styles": "stylelint src",
    "pr": "yarn pull-request",
    "pull-request": "node ./scripts/pull-request.js",
    "qa": "run-p lint type-check test",
    "start": "run-p start:**",
    "start:app": "react-scripts start",
    "start:lambda": "netlify-lambda serve src/lambda --config ./webpack.functions.js",
    "storybook:build": "build-storybook -s public",
    "storybook:start": "start-storybook -p 9009 -s public",
    "test": "jest",
    "ts": "ts-node -r dotenv/config -O '{ \"isolatedModules\": false, \"module\": \"commonjs\" }' ",
    "type-check": "tsc -p tsconfig.production.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "node ./scripts/stashed.js 'yarn qa'"
    }
  },
  "lint-staged": {
    "ignore": [
      "**/graphql-types.ts",
      "**/graphql-types/*"
    ],
    "linters": {
      "*.md": [
        "node ./scripts/toc.js",
        "git add README.md"
      ],
      "*.{ts,tsx}": [
        "prettier-eslint --write",
        "stylelint",
        "git add"
      ],
      "package.json": [
        "yarn sort-package-json",
        "git add"
      ]
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "prettier": "@strv/prettier-config",
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/src/tests/jest.setup.ts"
    ]
  },
  "dependencies": {
    "@rehooks/local-storage": "^1.4.0",
    "apollo-cache-inmemory": "^1.5.1",
    "apollo-client": "^2.5.1",
    "apollo-link": "^1.2.11",
    "apollo-link-dedup": "^1.0.18",
    "apollo-link-http": "^1.5.14",
    "apollo-server-lambda": "^2.4.8",
    "aws-lambda": "^0.1.2",
    "dataloader": "^1.4.0",
    "debug": "^4.1.1",
    "graphql": "^14.2.1",
    "graphql-playground-middleware-lambda": "^1.7.13",
    "graphql-resolvers": "^0.3.2",
    "graphql-tag": "^2.10.0",
    "graphql-tools": "^4.0.4",
    "history": "^4.9.0",
    "isomorphic-fetch": "^2.2.1",
    "mem": "^4.3.0",
    "netlify-auth-providers": "^1.0.0-alpha5",
    "patch-package": "^6.1.2",
    "postinstall-postinstall": "^2.0.0",
    "prop-types": "^15.6.2",
    "ramda": "^0.26.1",
    "react": "^16.8.6",
    "react-apollo": "^2.5.3",
    "react-dom": "^16.8.6",
    "react-error-boundary": "^1.2.3",
    "react-router-dom": "^4.3.1",
    "react-virtualized": "^9.21.0",
    "semver": "^5.6.0",
    "styled-components": "^4.1.1",
    "styled-system": "^2.2.1"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^5.0.6",
    "@storybook/addon-knobs": "^5.0.10",
    "@storybook/addon-links": "^5.0.6",
    "@storybook/addons": "^5.0.6",
    "@storybook/react": "^5.0.6",
    "@strv/eslint-config-react": "^2.0.1",
    "@strv/eslint-config-typescript": "^1.0.4",
    "@strv/prettier-config": "^1.0.1",
    "@strv/react-scripts": "^2.1.1",
    "@strv/stylelint-config-styled-components": "^1.0.0",
    "@types/aws-lambda": "^8.10.24",
    "@types/debug": "^4.1.3",
    "@types/graphql": "^14.0.3",
    "@types/isomorphic-fetch": "^0.0.35",
    "@types/jest": "^24.0.11",
    "@types/node": "^11.13.4",
    "@types/prop-types": "^15.5.6",
    "@types/react": "^16.8.7",
    "@types/react-dom": "^16.8.2",
    "@types/react-router-dom": "^4.3.1",
    "@types/react-virtualized": "^9.18.7",
    "@types/storybook__addon-knobs": "^5.0.0",
    "@types/storybook__react": "^4.0.1",
    "@types/styled-components": "^4.1.0",
    "@types/styled-system": "^3.0.6",
    "apollo": "^2.8.1",
    "babel-plugin-import-graphql": "^2.7.0",
    "babel-plugin-ramda": "^1.6.3",
    "babel-plugin-rewire": "^1.2.0",
    "babel-plugin-styled-components": "^1.9.4",
    "babel-polyfill": "^6.26.0",
    "chalk": "^2.4.2",
    "chance": "^1.0.18",
    "dotenv-webpack": "^1.7.0",
    "eslint": "^5.16.0",
    "glob": "^7.1.3",
    "husky": "^1.1.3",
    "inquirer": "^6.3.1",
    "jest": "^24.7.1",
    "lint-staged": "^8.0.4",
    "netlify-lambda": "^1.4.3",
    "npm-run-all": "^4.1.5",
    "onchange": "^5.2.0",
    "ora": "^3.4.0",
    "prettier": "^1.17.0",
    "prettier-eslint-cli": "^4.7.1",
    "react-hooks-testing-library": "^0.4.1",
    "simple-git": "^1.110.0",
    "sort-package-json": "^1.22.1",
    "source-map-explorer": "^1.8.0",
    "storybook-react-router": "^1.0.5",
    "storybook-styled-components": "^1.1.3",
    "stylelint": "^9.9.0",
    "ts-loader": "^5.3.1",
    "ts-node": "^8.0.3",
    "typescript": "^3.2.2",
    "typescript-styled-plugin": "^0.13.0",
    "uuid": "^3.3.2"
  },
  "resolutions": {
    "caniuse-lite": "1.0.30000957",
    "eslint-plugin-react": "^7.12.4",
    "graphql": "14.2.1"
  }
}
